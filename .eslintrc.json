{
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
        "react/no-direct-mutation-state": 2,
        "react/prefer-stateless-function": 2,
        "react/no-unused-state": 2,
        "react/require-render-return": 2,
        "react/no-multi-comp": 2,
        "react/prop-types": 0,
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}
